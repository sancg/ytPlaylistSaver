{
  "manifest_version": 3,
  "name": "Playlist Saver",
  "version": "1.1.0",
  "description": "YouTube Playlist saver in a local file",
  "action": {
    "default_popup": "src/pages/popup/popup.html",
    "default_icon": "assets/icons/dw_v3.3.png"
  },
  "side_panel": {
    "default_path": "src/pages/side_panel/side-panel.html",
    "default_icon": "assets/icons/dw_v3.3.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "/assets/app/scripts/content/contentScript.js",
        "/assets/app/scripts/content/contentFavButton.js"
      ]
    }
  ],
  "background": {
    "service_worker": "/assets/app/scripts/background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/html/pages/playlist_viewer.html", "assets/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "permissions": ["tabs", "scripting", "storage", "tabGroups", "sidePanel"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://www.youtube.com https://www.youtube-nocookie.com;"
  }
}
